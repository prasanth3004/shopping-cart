<section>
    <div class="container">
        <div class="row">
            {{#each products}}
        
        <div class="col-md-3 mt-5"> 
            <div class="card" style="">
                <img src="{{this.image}} " class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}} </h5>
                    <p class="card-text">{{this.description}}
                        </p>
                    <a href="#" class="btn btn-primary">Add to cart</a>
                </div>
            </div>

        </div>
        {{/each}}
        </div>
    </div>
</section>